<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/plex_server"
        android:src="@drawable/library_type_show"
        />

    <Button
        android:id="@+id/imdb"
        android:textSize="12sp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/imdb"
        android:layout_alignTop="@id/image"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/sickrage"
        android:textSize="12sp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/sickrage"
        android:layout_alignTop="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/unmatch"
        android:textSize="12sp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/unmatch"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/fix_match"
        android:textSize="12sp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/fix_match"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_margin="16dp"
        android:text="@string/summary_example"
        />

</RelativeLayout>